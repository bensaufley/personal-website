---
import '../styles/global.css';

import { type Props as SEOProps, SEO } from 'astro-seo';
import clsx from 'clsx';

import Footer from '~components/Footer/index.astro';
import Gtag from '~components/Gtag.astro';
import Header from '~components/Header/index.astro';

type ConditionalProps = (
  | {
      url: string;
    }
  | {
      request?: {
        pathname: string;
      };
    }
) & {
  title: string;
  description?: string | undefined;
  image?: string | undefined;
  openGraph?:
    | (Omit<Partial<NonNullable<SEOProps['openGraph']>>, 'basic'> & {
        basic?: Partial<NonNullable<SEOProps['openGraph']>['basic']>;
      })
    | undefined;
};

export type Props = ConditionalProps & {
  class?: string | undefined;
};

let pathname: string;
const { class: className } = Astro.props;
const {
  title,
  description = 'Personal website for Ben Saufley, a software engineer and illustrator from Portland, Maine.',
  image,
  openGraph,
} = Astro.props;
if ('url' in Astro.props) {
  ({ url: pathname } = Astro.props);
} else if (Astro.props.request) {
  ({ pathname } = Astro.props.request);
} else {
  pathname = '/';
}
---

<!doctype html>
<html lang="en" class="noJs">
  <head>
    <script>
      document.documentElement.classList.remove('noJs');
    </script>

    <SEO
      title={title}
      titleTemplate="Ben Saufley - %s"
      description={description}
      charset="utf-8"
      openGraph={{
        optional: {
          siteName: 'Ben Saufley',
          description,
          ...openGraph?.optional,
        },
        ...(image ? { image: { url: image, ...openGraph?.image } } : {}),
        ...openGraph,
        basic: {
          title: openGraph?.basic?.title ?? `Ben Saufley - ${title}`,
          type: openGraph?.basic?.type ?? 'website',
          image: openGraph?.basic?.image ?? image ?? '',
          url: pathname,
        },
      }}
      extend={{
        link: [
          { rel: 'icon', type: 'image/svg+xml', href: '/favicon.svg' },
          { rel: 'sitemap', href: '/sitemap-index.xml' },
        ],
        meta: [{ name: 'viewport', content: 'width=device-width,initial-scale=1' }],
      }}
    />
    {import.meta.env.PROD && <Gtag />}

    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,wght@0,300;0,600;1,300&family=Crimson+Text:ital,wght@0,600&display=swap"
      rel="stylesheet"
    />
    <meta name="theme-color" content="#fff" />
    <meta name="theme-color" media="(prefers-color-scheme: dark)" content="#000" />
  </head>
  <body class={clsx(className)}>
    <Header currentPath={pathname} />

    <main>
      <slot />
    </main>
    <Footer />
    <!-- scroll listener -->
    <script>
      import throttle from '~lib/throttle';

      const scrollListener = throttle(
        () => {
          Array.from(document.querySelectorAll('.sticky')).forEach((el) => {
            if (Math.floor(el.getBoundingClientRect().top) <= 0) {
              el.classList.add('stuck');
            } else {
              el.classList.remove('stuck');
            }
          });
        },
        25,
        true,
      );

      scrollListener();

      window.addEventListener('scroll', scrollListener);
    </script>
    <!-- end scroll listener -->
  </body>
</html>
